{
  "manifest_version": 2,

  "name": "Chat Everywhere",
  "short_name": "Chatty",
  "description": "This extension create a chat in any site you access",
  "version": "2.0",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Phoenix Chat"
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ]
}
